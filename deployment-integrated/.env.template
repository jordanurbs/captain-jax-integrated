# Captain JAX Integrated Content System - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ========================================
# TWITTER API CREDENTIALS
# ========================================
# Get from https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
# Create bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get your user ID from @userinfobot on Telegram
TELEGRAM_USER_ID=your_telegram_user_id_here

# ========================================
# VENICE AI (OPTIONAL)
# ========================================
# For AI-generated images - get from https://venice.ai
VENICE_API_KEY=your_venice_api_key_here

# ========================================
# SYSTEM CONFIGURATION
# ========================================
# Enable test mode (won't actually post to Twitter)
TEST_MODE=false

# Number of posts per day
POSTS_PER_DAY=3

# Posting times (24-hour format, comma-separated)
POSTING_TIMES=09:00,15:00,21:00

# Enable image generation (requires VENICE_API_KEY)
IMAGE_GENERATION=true

# ========================================
# APPROVAL & WORKFLOW
# ========================================
# Approval mode: disabled, optional, required
# - disabled: Auto-post everything
# - optional: Auto-post, notify in Telegram
# - required: Wait for Telegram approval before posting
APPROVAL_MODE=optional

# Enable reply CTAs (post promotional follow-up 2-4 hours later)
REPLY_CTAS=true

# Image style variation (cycle through 5 different styles)
IMAGE_STYLE_VARIATION=true

# Enhanced analytics tracking
ENHANCED_ANALYTICS=true

# ========================================
# CONTENT CONFIGURATION
# ========================================
# Content distribution percentages (should total ~100)
# Value-first content (no CTAs)
VALUE_FIRST_SHORT_PCT=15
VALUE_FIRST_MEDIUM_PCT=25
VALUE_FIRST_THREAD_PCT=12

# Soft CTA content (natural mentions)
SOFT_CTA_PCT=25

# Direct CTA content (promotional)
DIRECT_CTA_PCT=15

# Axonn premium templates
AXONN_PREMIUM_PCT=8

# ========================================
# ADVANCED SETTINGS
# ========================================
# Timezone for scheduling (default: UTC)
TIMEZONE=UTC

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Health check port
HEALTH_CHECK_PORT=8080

# Maximum tweet retries on error
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=60
